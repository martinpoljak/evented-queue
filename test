context "Single: PoorPriorityQueue (from 'priority_queue')" do
    setup do
        require "priority_queue/poor_priority_queue"
        UnifiedQueues::Single::new(PoorPriorityQueue)
    end
    
    asserts("#clear!") do
        topic.push(:foo)
        topic.clear!
        topic.pop.nil?
    end
    asserts("#pop") do
        topic.push(:foo, 2)
        topic.push(:bar, 1)
        topic.pop == :bar and topic.pop == :foo
    end
    asserts("#push") do
        topic.push(:foo)
        topic.pop == :foo
    end
end

